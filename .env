# ============================================
# BioStar 2 API Configuration
# ============================================
BIOSTAR_HOST=https://10.0.0.100
BIOSTAR_USER=rcetina
BIOSTAR_PASSWORD=aP1su.ser

# ============================================
# SEGURIDAD - CRÍTICO
# ============================================
SECRET_KEY=586de10a4e4af3e0267040987552b53a3af9f81f4cb20ba4c18d6f36eda16b93
FLASK_ENV=development

# ============================================
# Configuración de Sesiones
# ============================================
SESSION_LIFETIME_MINUTES=60
SESSION_INACTIVITY_TIMEOUT=15
REMEMBER_COOKIE_DAYS=7
SESSION_FINGERPRINT=true

# ============================================
# Rate Limiting (Protección contra fuerza bruta)
# ============================================
LOGIN_RATE_LIMIT=5
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
PERMANENT_LOCKOUT_AFTER=3
API_RATE_LIMIT=60

# ============================================
# Política de Contraseñas
# ============================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPER=true
PASSWORD_REQUIRE_LOWER=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=false
PASSWORD_HISTORY_COUNT=5
PASSWORD_MAX_AGE_DAYS=90

# ============================================
# 2FA - Autenticación de Dos Factores
# ============================================
REQUIRE_2FA=false
REQUIRE_2FA_FOR_ADMIN=false

# ============================================
# IP Whitelisting
# ============================================
IP_WHITELIST_ENABLED=false
# IP_WHITELIST=192.168.1.1,10.0.0.1
# ADMIN_IP_WHITELIST=192.168.1.100

# ============================================
# CSRF Protection
# ============================================
CSRF_ENABLED=true
CSRF_TIME_LIMIT=3600

# ============================================
# Logging y Auditoría
# ============================================
LOG_LEVEL=INFO
SECURITY_AUDIT_LOG=true
AUDIT_LOG_FILE=logs/security_audit.log
AUDIT_ALL_REQUESTS=false

# ============================================
# Encriptación de Datos
# ============================================
ENCRYPT_SENSITIVE_DATA=false
# ENCRYPTION_KEY=

# ============================================
# Base de Datos
# ============================================
DATABASE_URL=sqlite:///biostar_users.db

# ============================================
# HTTPS (activar en producción)
# ============================================
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# ============================================
# Configuración de Red
# ============================================
PORT=5000
HOST=127.0.0.1
DEBUG=true

# ============================================
# Cache Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true

# ============================================
# Producción - Ocultar Información Sensible
# ============================================
HIDE_SERVER_INFO=false
SUPPRESS_CONSOLE_LOGS=false
REMOVE_COMMENTS=false
DISABLE_DEBUG_TOOLBAR=false
